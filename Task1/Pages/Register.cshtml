@page
@model Task1.Pages.RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="Register">


    <h1>Sign Up</h1>
    <h6 align="center">Register Here</h6>

    @if (Model.hasData)
    {
        <h4 class="alert-success" align="center">Successfully Signed In</h4>
    }
    <div class="container">
        <form method="POST">

            <label for="fname">Name</label>
            <input type="text" id="fname" name="fname" placeholder="Mathew" required />
            <label for="sname">Surname</label>
            <input type="text" id="sname" name="sname" placeholder="Gomez" required />

            <label for="txtGender">Gender</label>
            <select id="txtGender" name="txtGender" required>
                <option value="M">M</option>
                <option value="F">F</option>
                <option value="Other">Other</option>
            </select>

            <label for="email">Email</label>
            <input type="email" id="txtEmail" name="txtEmail" placeholder="Mathew@Outlook.com" required />

            <label for="txtPassword">Password</label>
            <input type="password" id="txtPassword" placeholder="*************" name="txtPassword" required />

            <input type="submit" name="btnCapture" value="Sign up">
            
            <input type="reset" style="margin-top:15px;" name="btnReset" value="Reset">
        </form>
    </div>

</div>
